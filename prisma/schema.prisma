generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relações
  salary   Salary?
  histories SalaryHistory[]
}

model Salary {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  amount    Float
  currency  String
  position  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relação 1:1 com User
  user User @relation(fields: [userId], references: [id])
}

model SalaryHistory {
  id           Int      @id @default(autoincrement())
  userId       Int
  amount       Float
  currency     String
  position     String
  effectiveFrom DateTime
  effectiveTo   DateTime?
  isCurrent    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relação N:1 com User
  user User @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
}